{
  "name": "server",
  "version": "1.0.0",
  "description": "Advanced GraphQL with Apollo and React server code",
  "repository": "github:rshurts/devchirps",
  "main": "index.js",
  "engines": {
    "node": ">=14.5.0"
  },
  "scripts": {
    "dev": "concurrently -k npm:dev:*",
    "dev:accounts": "nodemon -r dotenv/config -r esm --watch ./src/services/accounts ./src/services/accounts/index.js",
    "dev:profiles": "nodemon -r dotenv/config -r esm --watch ./src/services/profiles ./src/services/profiles/index.js",
    "dev:gateway": "wait-on tcp:4001 && wait-on tcp:4002 && nodemon -r dotenv/config -r esm --ignore ./src/services ./src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@apollo/federation": "^0.21.0",
    "@apollo/gateway": "^0.22.0",
    "apollo-datasource": "^0.7.3",
    "apollo-server": "^2.19.2",
    "apollo-server-express": "^2.19.2",
    "auth0": "^2.33.0",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "graphql": "^15.5.0",
    "graphql-middleware": "^4.0.3",
    "graphql-shield": "^7.5.0",
    "gravatar-url": "^3.1.0",
    "jwks-rsa": "^1.12.2",
    "mongoose": "^5.11.15",
    "node-fetch": "^2.6.1",
    "validator": "^13.5.2",
    "wait-on": "^5.2.1"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "eslint": "^7.19.0",
    "eslint-plugin-react": "^7.22.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  }
}
